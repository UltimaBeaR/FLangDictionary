<Page x:Class="FLangDictionary.UI.NoArticlesViewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FLangDictionary.UI"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Loaded="Page_Loaded"
      Unloaded="Page_Unloaded">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="{DynamicResource Lang.NoArticlesView.Message}" x:Name="messageLabel" />
            <Button Content="{DynamicResource Lang.NoArticlesView.CreateArticle}" Click="CreateArticleButton_Click" />
        </StackPanel>
    </Grid>
</Page>
