<Page x:Class="FLangDictionary.UI.WorkspaceIsNotLoadedViewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FLangDictionary.UI"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Horizontal">
            <Label Content="{DynamicResource Lang.WorkspaceIsNotLoadedView.Message}" />
            <Button Content="{DynamicResource Lang.WorkspaceIsNotLoadedView.BrowseWorkspaces}" Click="BrowseWorkspacesButton_Click" />
        </StackPanel>
    </Grid>
</Page>
