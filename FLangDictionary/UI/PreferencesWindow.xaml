<Window x:Class="FLangDictionary.UI.PreferencesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FLangDictionary.UI"
        mc:Ignorable="d"
        Title="{DynamicResource Lang.PreferencesTitle}" Height="300" Width="300"
        Loaded="Window_Loaded"
        Closed="Window_Closed"
        ResizeMode="NoResize">
    <StackPanel Orientation="Vertical" Margin="10,10,10,10">
        <Label Content="{DynamicResource Lang.UILanguageLabel}" />
        <ComboBox x:Name="comboBoxUILanguage" SelectionChanged="comboBoxUILanguage_SelectionChanged">
            <ComboBoxItem Tag="en">English</ComboBoxItem>
            <ComboBoxItem Tag="ru">Русский</ComboBoxItem>
        </ComboBox>
    </StackPanel>
</Window>
